---
permalink: /
layout: base.liquid
eleventyNavigation:
  key: home
  title: Home
  order: 0
title: This is the home page!
---

<main class="home-page">
  <section class="py-2 py-lg-3">
    <div class="container hero-grid">
      <picture>
        <source type="image/webp" srcset="{{ home.acf.hero.image.sizes.large | replace: '.png', '.webp' }}">
        <source type="image/png" srcset="{{ home.acf.hero.image.sizes.large }}">
        <img 
          class="img-fluid hero-grid__img" 
          src="{{ home.acf.hero.image.sizes.large }}" 
          alt="{{ home.acf.hero.title }}"
          width="{{ home.acf.hero.image.sizes.large-width }}"
          height="{{ home.acf.hero.image.sizes.large-height }}"
        >
      </picture>
      <div class="hero-grid__text">
        <h1 class="mb-2">{{ home.acf.hero.title }}</h1>
        {{ home.acf.hero.description }}
      </div>
      {% include 'card-overlay', thePost: posts[0] %} {% include 'card-overlay',
      thePost: posts[1] %}
    </div>
  </section>
  <section class="text-aling-center py-2 py-lg-3">
    <div class="container">
      <h2 class="mb-2">Todos os Posts</h2>
      <div class="posts-grid">
        {% assign slicedPosts = posts | arrSlice: 0, 3 %}
        {% for post in slicedPosts %} {% include 'card', thePost: post %} {% endfor %}
      </div>
      <button class="btn btn--tertiary mt-3" data-load="posts" data-load-size="3">Carregar mais</button>
    </div>
  </section>
</main>
