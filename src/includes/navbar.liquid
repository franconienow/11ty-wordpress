{% assign navPages = collections.all | eleventyNavigation %}
<nav class="navbar">
  <button class="navbar__nav-toggler">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
    </svg>
  </button>
  <a href="/" class="navbar__logo">
    <img src="{{ site.logo }}" alt="Logo">
  </a>
  <ul class="navbar__nav">
    {% for navPage in navPages %}
      <li class="navbar__item{% if navPage.children.size > 0 %} dropdown{% endif %}">
        <a
          href="{{ navPage.url }}"
          class="navbar__link{% if navPage.children.size > 0 %} dropdown__toggler{% endif %}"
          {% if navPage.children.size > 0 %}aria-expanded="false"{% endif %}
          {% if navPage.url == page.url %}aria-current="page"{% endif %}
        >
          {{ navPage.title }}
          {% if navPage.children.size > 0 %} 
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          {% endif %}
        </a>
        {% if navPage.children.size > 0 %}
        <ul class="dropdown__target">
          {% for childPage in navPage.children %}
          <li>
            <a 
              href="{{ childPage.url }}"
              {% if childPage.url == page.url %}aria-current="page"{% endif %}
            >
              {{ childPage.title }}
            </a>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
  <div class="navbar__search" id="navbar-search">
    <input type="text" name="navbar__search-input" id="navbar__search-input">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
    </svg>
  </div>
</nav>

