{% assign navPages = collections.all | eleventyNavigation %}
<nav class="navbar">
  <ul>
    {% for page in navPages %}
      <li>
        <a href="{{ page.url }}">{{ page.title }}</a>
        {% if page.children.size > 0 %}
        <ul>
          {% for childPage in page.children %}
          <li>
            <a href="{{ childPage.url }}">{{ childPage.title }}</a>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>
